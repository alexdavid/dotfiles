# https://i3wm.org/docs/userguide.html for reference
set $mod Mod4
set $alt Mod1

font pango:SFNS Display 13
gaps inner 10
default_border pixel 4
focus_wrapping false
mouse_warping output
client.focused #ffb52a #ffb52a #ff0000 #e5c07b #e5c07b

floating_modifier $mod

bindsym $mod+shift+g gaps inner current minus 10
bindsym $mod+g gaps inner current plus 10

bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/actions/volume-up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/actions/volume-down
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/actions/volume-mute
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/actions/brightness-up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/actions/brightness-down

bindsym Print exec --no-startup-id ~/.config/i3/actions/take-screenshot
bindsym $mod+$alt+3 exec --no-startup-id ~/.config/i3/actions/take-screenshot
bindsym Shift+Print exec --no-startup-id ~/.config/i3/actions/take-screenshot -s
bindsym $mod+$alt+4 exec --no-startup-id ~/.config/i3/actions/take-screenshot -s

bindsym $mod+x exec --no-startup-id ~/.config/i3/actions/toggle-locker

bindsym $mod+Return exec termite
bindsym $mod+n exec qutebrowser
bindsym $mod+Shift+n exec ~/.config/chromium_apps/launch

bindsym $mod+space exec rofi -show drun -show-icons
bindsym $mod+Shift+space exec rofi -show run
bindsym $mod+backslash exec custompassmenu
bindsym $alt+Mod4+backslash exec custompassmenu --last

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+j move workspace to output down
bindsym $mod+Ctrl+k move workspace to output up
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+s split v
bindsym $mod+v split h

bindsym $mod+Shift+q kill

bindsym $mod+f fullscreen toggle
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+f floating toggle
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+Tab exec --no-startup-id ~/.config/i3/actions/switch-workspace
bindsym $mod+1 exec --no-startup-id ~/.config/i3/actions/switch-workspace 1
bindsym $mod+2 exec --no-startup-id ~/.config/i3/actions/switch-workspace 2
bindsym $mod+3 exec --no-startup-id ~/.config/i3/actions/switch-workspace 3
bindsym $mod+4 exec --no-startup-id ~/.config/i3/actions/switch-workspace 4
bindsym $mod+5 exec --no-startup-id ~/.config/i3/actions/switch-workspace 5
bindsym $mod+6 exec --no-startup-id ~/.config/i3/actions/switch-workspace 6
bindsym $mod+7 exec --no-startup-id ~/.config/i3/actions/switch-workspace 7
bindsym $mod+8 exec --no-startup-id ~/.config/i3/actions/switch-workspace 8
bindsym $mod+9 exec --no-startup-id ~/.config/i3/actions/switch-workspace 9

# move focused container to workspace
bindsym $mod+Shift+Tab exec --no-startup-id ~/.config/i3/actions/switch-workspace "" move
bindsym $mod+Shift+1 exec --no-startup-id ~/.config/i3/actions/switch-workspace 1 move
bindsym $mod+Shift+2 exec --no-startup-id ~/.config/i3/actions/switch-workspace 2 move
bindsym $mod+Shift+3 exec --no-startup-id ~/.config/i3/actions/switch-workspace 3 move
bindsym $mod+Shift+4 exec --no-startup-id ~/.config/i3/actions/switch-workspace 4 move
bindsym $mod+Shift+5 exec --no-startup-id ~/.config/i3/actions/switch-workspace 5 move
bindsym $mod+Shift+6 exec --no-startup-id ~/.config/i3/actions/switch-workspace 6 move
bindsym $mod+Shift+7 exec --no-startup-id ~/.config/i3/actions/switch-workspace 7 move
bindsym $mod+Shift+8 exec --no-startup-id ~/.config/i3/actions/switch-workspace 8 move
bindsym $mod+Shift+9 exec --no-startup-id ~/.config/i3/actions/switch-workspace 9 move

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+equal exec popup-term "calc -d" 900x150

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

for_window [class="Pinentry"] floating enable
for_window [class="popup"] floating enable
for_window [title="__quicklook"] floating enable

exec --no-startup-id xmodmap ~/.config/xorg/xmodmap
exec --no-startup-id bash ~/.xsessionrc
exec --no-startup-id ~/.config/xss-lock/start
exec_always --no-startup-id ~/.config/dunst/start
exec_always --no-startup-id set-displays

bar {
  i3bar_command i3bar -t
  status_command i3blocks
  position top
  height 34
  font pango:SFNS Display, icons 18px
  colors {
    background #282c34
    focused_workspace #282c34 #282c34 #98c379
    active_workspace #282c34 #282a36 #c1bfbf
    inactive_workspace #282c34 #282a36 #555555
  }
}
