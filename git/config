[core]
  excludesfile = ~/.config/git/gitignore_global
  editor = nvim
[alias]
  st = status --short --branch
  bs = branch-status
  co = checkout
  cob = checkout -b
  k = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an/%cn]" --decorate --graph
[color]
  ui = true
[push]
  default = current
[merge]
  conflictstyle = diff3
[include]
  path = ~/.config/git/gitconfig_user
[pull]
  rebase = false
