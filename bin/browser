#!/usr/bin/env bash

set -e

ff="env GDK_BACKEND=wayland firefox"

case "$1" in
  https://twitch.tv/*)       mpvsingleton "$1"          ;;
  https://vimeo.com/*)       mpvsingleton "$1"          ;;
  https://youtube.com/*)     mpvsingleton "$1"          ;;
  https://www.youtube.com/*) mpvsingleton "$1"          ;;
  https://youtu.be/*)        mpvsingleton "$1"          ;;
  https://*)                 $ff "$1"          ;;
esac
