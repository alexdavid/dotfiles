#!/usr/bin/env bash

set -e

IMAGE=$1
ARGV=("$@")

PORT_FORWARDS=()
for PORT in "${ARGV[@]:1}"; do
  PORT_FORWARDS+=("--publish=$PORT:$PORT")
done

docker run \
  --interactive \
  --rm \
  --tty \
  --user "$(id -u):$(id -g)" \
  --volume "$(pwd):/mnt" \
  --workdir "/mnt" \
  "${PORT_FORWARDS[@]}" \
  $IMAGE \
  bash
