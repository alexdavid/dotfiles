#!/usr/bin/env bash

# Modified version of passmenu to fit my needs
# Original can be found here:
# https://git.zx2c4.com/password-store/tree/contrib/dmenu/passmenu

# Warp mouse to top left corner of active window since i3 will change
# the active window when rofi closes if the mouse was over it
shopt -s nullglob globstar

prefix=${PASSWORD_STORE_DIR-~/.password-store}

if [ "$1" != "--last" ]; then
  password_files=( "$prefix"/**/*.gpg )
  password_files=( "${password_files[@]#"$prefix"/}" )
  password_files=( "${password_files[@]%.gpg}" )
  password_name=$(printf '%s\n' "${password_files[@]}" | rofi -dmenu -p Password)
  echo "$password_name" > "$prefix"/.last
else
  password_name=$(cat "$prefix"/.last)
fi

[ -n "$password_name" ] || exit

pass show "$password_name" | {
  declare -A map
  read -r line
  [ -n "$line" ] && map["password"]="$line"

  while true; do
    read -r line
    [ -z "$line" ] && break
    IFS=':' read -r key value <<< "$line"
    map["${key,,}"]=$(echo "${value}" | xargs)
  done

  key=$(printf "%s\n" "${!map[@]}" | rofi -dmenu -p "$password_name")
  [ -n "$key" ] || exit

  if [ "$key" = "otpauth" ]; then
    value=$(pass otp "$password_name")
  else
    value="${map["$key"]}"
  fi

  printf "%s" "$value" | wl-copy
  sleep 10
  if [[ "$(wl-paste --no-newline)" = "$value" ]]; then
    wl-copy --clear
  fi
}
